<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="663.0" prefWidth="1070.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WordOfTheDayController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="TOP_RIGHT" spacing="10">
        <Label fx:id="dayLabel" style="-fx-font-size: 16px;"/>
        <Label text="-" style="-fx-font-size: 16px;"/>
        <Label fx:id="monthLabel" style="-fx-font-size: 16px;"/>
        <Label text="-" style="-fx-font-size: 16px;"/>
        <Label fx:id="yearLabel" style="-fx-font-size: 16px;"/>
    </HBox>

    <VBox alignment="TOP_CENTER" spacing="20">
        <Label text="Word of the Day" style="-fx-font-size: 60px;"/>
        <Label fx:id="wordLabel" style="-fx-font-size: 20px;"/>
        <Label fx:id="pronunciationLabel" style="-fx-font-size: 18px;"/>
        <Label fx:id="partOfSpeechLabel" style="-fx-font-size: 16px;"/>
        <Label fx:id="meaningLabel" style="-fx-font-size: 16px;"/>
    </VBox>

    <stylesheets>
        <!-- If you have a CSS stylesheet, you can reference it here -->
        <!--<URL value="@yourStylesheet.css"/>-->
    </stylesheets>
</VBox>
